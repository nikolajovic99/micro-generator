<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.nikolajovic99.microgenerator</id>
    <name>MicroGenerator</name>
    <vendor>nikolajovic99</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij" />

    <actions>
        <!-- Glavna akcija: Generate skeleton from YAML -->
        <action id="MicroGen.GenerateSkeleton"
                class="com.github.nikolajovic99.microgenerator.actions.GenerateSkeletonAction"
                text="Generate Microservice (Skeleton) from YAML"
                description="Generate a Spring Boot skeleton project from a YAML spec">
            <!-- Stavi je u Tools meni; pojaviÄ‡e se na dnu -->
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <!-- (Opcionalno) shortkut u default keymapu -->
            <!-- <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/> -->
        </action>
    </actions>
</idea-plugin>
